        <Button x:Name="btnAddStaff" Content="Add staff" HorizontalAlignment="Left" Margin="651,553,0,0" VerticalAlignment="Top" Width="114" Click="btnAddStaff_Click" Height="37" FontSize="14.667"/>
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Left" Margin="263,553,0,0" VerticalAlignment="Top" Width="112" Click="btnExit_Click" Height="37" FontSize="14.667"/>

    </Grid>
