<Window x:Class="Hospital_Management_System.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AdminWindow" WindowState="Maximized" WindowStartupLocation="CenterScreen" Height="600" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="image/Admin.jpg"/>
    </Window.Background>
    <Grid Background="White">
        <Button x:Name="btnLogout" Content="Logout" HorizontalAlignment="Left" Margin="21,61,0,0" VerticalAlignment="Top" Width="75" Click="btnLogout_Click" />
        <Label x:Name="lblAdmin" Content="Admin" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="21,171,0,0" FontSize="48" Foreground="#FF0B8CCE" FontFamily="Microsoft JhengHei UI" FontWeight="Bold"/>
        <Button x:Name="btnAddStaff" Content="Add Staff" HorizontalAlignment="Left" Margin="36,262,0,0" VerticalAlignment="Top" Height="25" Width="136" Click="btnAddStaff_Click" />
        <Button x:Name="btnUpdateDeleteStaff" Content="Update/Delete Staff" HorizontalAlignment="Left" Margin="36,302,0,0" VerticalAlignment="Top" Height="25" Width="136" Click="btnUpdateDeleteStaff_Click" />
        <Button x:Name="btnAddDoctor" Content="Add Doctor" HorizontalAlignment="Left" Margin="36,346,0,0" VerticalAlignment="Top" Height="25" Width="136" Click="btnAddDoctor_Click" />
        <Button x:Name="btnUpdateDeleteDoctor" Content="Update/Delete Doctor" HorizontalAlignment="Left" Margin="36,388,0,0" VerticalAlignment="Top" Height="25" Width="136" Click="btnUpdateDeleteDoctor_Click" />
        <Button Content="Add Medicine" HorizontalAlignment="Left" Height="25" Margin="36,431,0,0" VerticalAlignment="Top" Width="136" Click="Button_Click_1"/>
        <Frame x:Name="adminFrame" NavigationUIVisibility="Hidden" Content="" HorizontalAlignment="Left" Height="600" Margin="300,0,0,0" VerticalAlignment="Top" Width="1000" Background="White"/>
        <Button Content="Add Tests" HorizontalAlignment="Left" Height="25" Margin="36,472,0,0" VerticalAlignment="Top" Width="136" Click="Button_Click_2"/>
        <Button x:Name="button" Content="View Patient History" HorizontalAlignment="Left" Margin="36,513,0,0" VerticalAlignment="Top" Width="136" Click="button_Click"/>
    </Grid>
</Window>
